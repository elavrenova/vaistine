@using Kendo.Mvc.UI
@using Vaistine.Areas.Cags.Models
@model Vaistine.Areas.Cags.Models.Cag

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>@Model.Descr</h2>
<hr />
<div class="small">
    @(Html.Kendo().TabStrip().Name("tabstrip")

          .Items(
              ts =>
              {
                  ts.Add().Text("Общие сведения").HtmlAttributes(new { style = "width:auto" })
                      .Selected(true)
                      .Content(@<text>
                                   <dl class="dl-horizontal">
                                       <dt>
                                           Название
                                       </dt>
                                       <dd>
                                           @Html.DisplayFor(model => model.Descr)
                                       </dd>
                                       <dt>
                                           @Html.DisplayNameFor(model => model.ParentId)
                                       </dt>
                                       <dd>
                                           @Html.DisplayFor(model => model.Parent.Descr)
                                       </dd>
                                   </dl>
                                </text>);
                  ts.Add().Text("Дочерние компании")
                      .HtmlAttributes(new{style="width:auto"})
                      .Content(@<text>
                                   @*<vc:store-in-docs-vc id="@Model.Id"></vc:store-in-docs-vc>*@
                                   <vc:cag-sub-companies-vc id="@Model.Id"></vc:cag-sub-companies-vc>
                                </text>);

              }

          )

          )
</div>