@using Kendo.Mvc.UI
@model Component

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Descr</h2>
<hr />
<div class="small">
    @(Html.Kendo().TabStrip().Name("tabstrip")

                          .Items(
                              ts =>
                              {
                                  ts.Add().Text("Общие сведения").HtmlAttributes(new { style = "width:auto" })
                                      .Selected(true)
                                      .Content(@<text>
                                        <dl class="dl-horizontal">
                                            <dt>
                                                Название
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.Descr)
                                            </dd>   
                                        </dl>
                                    </text>);
                                    ts.Add().Text("Содержится в")
                                        .HtmlAttributes(new { style = "width:auto" })
                                        .Content(@<text>
                                                            
                                        </text>);
                                  
                              }

                                                                                                                                                                          )

    )
</div>


